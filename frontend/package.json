{
  "name": "@talkdash/frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start": "pnpm build && pnpm start",
    "build": "tsc && vite build",
    "test": "tsc -p tsconfig.test.json && vitest",
    "typecheck": "tsc --build",
    "typecheck:watch": "tsc --build --watch",
    "lint": "prettier . --check && pnpm typecheck && eslint .",
    "lint:fix": "prettier . --write && pnpm typecheck && eslint --fix .",
    "preview": "vite preview",
    "clean": "rimraf dist",
    "viz": "madge --image graph.svg src/index.tsx"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "dependencies": {
    "@ark-ui/solid": "^1.1.0",
    "@sentry/browser": "^7.88.0",
    "@sentry/vite-plugin": "^3.2.2",
    "@solid-primitives/storage": "^2.1.1",
    "@solidjs/router": "^0.10.1",
    "@talkdash/backend": "workspace:*",
    "@talkdash/schema": "workspace:*",
    "@tanstack/solid-query": "^5.8.2",
    "@trpc/client": "^10.41.0",
    "@trpc/server": "^10.41.0",
    "animate.css": "^4.1.1",
    "clsx": "^2.0.0",
    "luxon": "^3.4.3",
    "madge": "^6.1.0",
    "posthog-js": "^1.96.1",
    "qrcode": "^1.5.3",
    "solid-js": "^1.9.5",
    "solid-toast": "^0.5.0",
    "tailwind-merge": "^2.0.0",
    "unique-names-generator": "^4.7.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@mdx-js/rollup": "^3.0.0",
    "@solidjs/testing-library": "^0.8.4",
    "@tailwindcss/vite": "^4.0.12",
    "@tanstack/eslint-plugin-query": "^5.12.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@types/luxon": "^3.3.3",
    "@types/mdx": "^2.0.10",
    "@types/qrcode": "^1.5.4",
    "axe-core": "^4.8.3",
    "dotenv": "^16.3.1",
    "eslint": "^9.22.0",
    "eslint-config-talkdash": "workspace:*",
    "eslint-plugin-solid": "^0.13.0",
    "jsdom": "^26.0.0",
    "mock-socket": "^9.3.1",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "remark-gfm": "^4.0.0",
    "solid-devtools": "^0.29.2",
    "solid-jsx": "^1.1.4",
    "tailwindcss": "^4.0.12",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0",
    "vite": "^6.2.1",
    "vite-plugin-pwa": "^0.21.1",
    "vite-plugin-solid": "^2.11.6",
    "vitest": "^3.0.8",
    "workbox-window": "^7.0.0"
  }
}
