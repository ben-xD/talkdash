{
  "compilerOptions": {
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    // Because of drizzle: https://github.com/drizzle-team/drizzle-orm/issues/1207 and https://github.com/drizzle-team/drizzle-orm/issues/879
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
