{
  "name": "@talkdash/backend",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "build": "tsc && shx cp -r migrations dist",
    "dev": "tsx watch --clear-screen=false src/backend.ts",
    "test": "vitest",
    "test:debug": "vitest --test-timeout=0",
    "start": "node dist/src/backend.js",
    "deploy": "fly deploy --app talkdash ..",
    "deploy:staging": "fly deploy --app talkdash-staging ..",
    "logs": "fly logs --app talkdash",
    "logs:staging": "fly logs --app talkdash-staging",
    "typecheck": "tsc --build",
    "typecheck:watch": "tsc --build --watch",
    "lint": "prettier . --check && pnpm typecheck && eslint .",
    "lint:fix": "prettier . --write && pnpm typecheck && eslint --fix .",
    "db": "docker-compose up -d db",
    "docker": "docker-compose up -d backend",
    "db:logs": "docker logs talkdash-pg_proxy-1 -f",
    "db:reset": "docker-compose down -v db && docker-compose up -d db",
    "db:gen": "pnpm dbx -- generate:pg",
    "db:gen-broken": "drizzle-kit generate:pg",
    "db:ui": "pnpm dbx -- studio",
    "clean": "rimraf dist",
    "dbx": "tsx node_modules/drizzle-kit/bin.cjs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.13.10",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.6",
    "@types/ws": "^8.5.8",
    "eslint": "^9.22.0",
    "eslint-config-talkdash": "workspace:*",
    "globals": "^16.0.0",
    "prettier": "^3.0.3",
    "typescript": "^5.8.2",
    "vitest": "^1.1.0"
  },
  "dependencies": {
    "@fastify/websocket": "^8.2.0",
    "@lucia-auth/adapter-postgresql": "^2.0.2",
    "@lucia-auth/oauth": "^3.5.0",
    "@neondatabase/serverless": "^0.6.0",
    "@talkdash/schema": "workspace:*",
    "@trpc/server": "^10.41.0",
    "bcrypt": "^5.1.1",
    "chalk": "^5.3.0",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.20.9",
    "drizzle-orm": "^0.29.2",
    "drizzle-zod": "^0.5.1",
    "eslint-plugin-drizzle": "^0.2.3",
    "fastify": "^4.24.3",
    "lucia": "^2.7.4",
    "openai": "^4.14.1",
    "pg": "^8.11.3",
    "prom-client": "^15.1.0",
    "shx": "^0.3.4",
    "superjson": "^2.0.0",
    "trpc-panel": "^1.3.4",
    "tsx": "^4.7.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  }
}
